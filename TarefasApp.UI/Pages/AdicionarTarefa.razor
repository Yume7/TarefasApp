@page "/"
@page "/adicionar-tarefa"
@inject TarefaService TarefaService
@inject NavigationManager Navigation

@using TarefasApp.Domain.DTOs.Requests
@using TarefasApp.Domain.DTOs.Responses

<h3 class="text-center mt-4">Adicionar Tarefa</h3>

<div class="container d-flex justify-content-center">
    <div class="card p-4 shadow-lg w-50">
        <div class="form-group mb-3">
            <label class="fw-bold">Título</label>
            <input @bind="novaTarefa.Titulo" class="form-control" placeholder="Digite o título" />
        </div>

        <div class="form-group mb-3">
            <label class="fw-bold">Descrição</label>
            <textarea @bind="novaTarefa.Descricao" class="form-control" placeholder="Digite a descrição"></textarea>
        </div>

        <div class="form-group mb-3">
            <label class="fw-bold">Data</label>
            <input type="date" @bind="novaTarefa.Data" class="form-control" />
        </div>

        <div class="form-group mb-4">
            <label class="fw-bold">Status</label>
            <select @bind="novaTarefa.Status" class="form-control">
                <option value="0">Pendente</option>
                <option value="1">Concluída</option>
            </select>
    </div>


        <button class="btn btn-success btn-lg w-100" @onclick="CadastrarTarefa">
            <i class="bi bi-check-circle"></i> Salvar
        </button>
</div>
</div>

@code {
    private TarefaRequestDTO novaTarefa = new();

    private async Task CadastrarTarefa()
    {
        await TarefaService.Cadastrar(novaTarefa);
        Navigation.NavigateTo("/tarefas");
    }
}
